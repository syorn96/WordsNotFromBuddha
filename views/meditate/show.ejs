<div style="background-image: url(/public/media/wrapper.png); background-size:cover;">
<h1>🧘🏽 MEDITATE 🧘🏽‍♀️</h1>
<br>
</div>
<% quotes.forEach((quote, index) => { %>
    <div>
        <br>
        <h4>"<%=quote.q%>"</h4>
        <p style="font-family: Arial, Helvetica, sans-serif; font-weight: bold;"><%=quote.a%></p>
        <div>
            <form method="POST" action="/users/meditate">
                <input hidden type="text" name="content" value="<%=quote.q%>" required>
                <input hidden type="text" name="author" value="<%=quote.a%>" required>
                <button class="clickme btn btn-dark" type="submit">Add quote to Reflect</button>
            </form>
        </div>
        <br>
        <hr>
    </div>
<%})%>
<button class="btn btn-dark btn-sm" onclick="topFunction()" id="top-Btn" title="Go to top">Return to Top</button>
<a class="btn btn-dark" id="reflect-Btn" href="/users/reflect">Done Meditating? ➡ Reflect!</a>
<script src="../../public/scroll.js"></script>

